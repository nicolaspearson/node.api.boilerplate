{
	"name": "node-api-boilerplate",
	"version": "1.0.0",
	"description": "This is Node JS Boilerplate API, using Koa, Typescript, and MySQL",
	"main": "./src/index.ts",
	"engines": {
		"node": ">=7.6.0"
	},
	"author": "Nicolas Pearson",
	"license": "UNLICENSED",
	"repository": {
		"type": "git",
		"url": ""
	},
	"scripts": {
		"start": "npm run build && npm run watch",
		"start:debug": "ts-node --inspect=5858 --debug-brk --ignore false ./src/index.ts",
		"build": "rm -rf ./dist && npm run build:ts && npm run tslint && npm run build:swagger",
		"build:ts": "tsc --rootDir ./src/",
		"build:swagger": "node ./dist/tasks/Swagger.js",
		"debug": "npm run build && npm run watch:debug",
		"serve": "nodemon dist/index.js",
		"serve:debug": "nodemon --inspect=5858 --debug-brk --ignore false dist/index.js",
		"watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run serve\"",
		"watch:debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run serve:debug\"",
		"watch:ts": "tsc -w",
		"tslint": "tslint -c tslint.json -p tsconfig.json",
		"clean": "rm -rf node_modules && npm install",
		"test:unit": "mocha -r ts-node/register ./src/tests/unit/**/*.spec.ts",
		"test:unit:debug": "mocha --inspect --debug-brk --not-timeouts --compilers ts:ts-node/register ./src/tests/unit/**/*.spec.ts",
		"test:e2e:pre": "ts-node ./src/tests/test-scripts/start-test-db.ts",
		"test:e2e:run": "ts-node ./src/tests/test-scripts/run-e2e.ts",
		"test:e2e:post": "ts-node ./src/tests/test-scripts/stop-test-db.ts",
		"generate": "node ./dist/templates/scripts/Generate.js"
	},
	"dependencies": {
		"axios": "^0.16.1",
		"bcrypt": "~1.0.3",
		"chalk": "~2.1.0",
		"class-validator": "~0.7.3",
		"config": "~1.26.2",
		"event-dispatch": "~0.4.1",
		"farmhash": "~2.0.4",
		"fs": "0.0.1-security",
		"fs-extra": "~4.0.3",
		"glob": "~7.1.2",
		"inquirer": "~3.3.0",
		"jsonwebtoken": "~8.1.0",
		"kcors": "~2.2.1",
		"koa": "~2.3.0",
		"koa-bodyparser": "~4.2.0",
		"koa-helmet": "~3.2.0",
		"koa-router": "~7.1.1",
		"lodash": "~4.17.4",
		"moment": "~2.19.3",
		"mysql": "^2.13.0",
		"pluralize": "~7.0.0",
		"reflect-metadata": "^0.1.10",
		"replace-in-file": "~3.0.0",
		"routing-controllers": "~0.7.6",
		"socket.io": "~2.0.4",
		"socket.io-client": "~2.0.4",
		"swagger-jsdoc": "~1.9.7",
		"typedi": "~0.5.2",
		"typeorm": "^0.1.6",
		"winston": "~2.4.0"
	},
	"devDependencies": {
		"@types/bcrypt": "~1.0.0",
		"@types/chai": "^3.5.2",
		"@types/chalk": "~0.4.31",
		"@types/config": "0.0.33",
		"@types/fs-extra": "~4.0.5",
		"@types/glob": "~5.0.33",
		"@types/inquirer": "0.0.35",
		"@types/jsonwebtoken": "~7.2.3",
		"@types/kcors": "~2.2.2",
		"@types/koa": "~2.0.42",
		"@types/koa-bodyparser": "~3.0.26",
		"@types/koa-helmet": "~3.1.2",
		"@types/lodash": "~4.14.87",
		"@types/mocha": "~2.2.44",
		"@types/node": "~8.0.55",
		"@types/pluralize": "0.0.28",
		"@types/shelljs": "~0.7.6",
		"@types/sinon": "~2.3.7",
		"@types/sinon-chai": "^2.7.27",
		"@types/socket.io": "~1.4.31",
		"@types/socket.io-client": "~1.4.32",
		"@types/supertest": "~2.0.4",
		"@types/swagger-jsdoc": "0.0.1",
		"@types/winston": "~2.3.7",
		"chai": "^3.5.0",
		"concurrently": "~3.5.1",
		"mocha": "^3.4.1",
		"nodemon": "~1.12.1",
		"shelljs": "^0.7.7",
		"sinon": "^2.2.0",
		"sinon-chai": "^2.10.0",
		"supertest": "^3.0.0",
		"ts-helpers": "~1.1.2",
		"ts-mockito": "~2.2.7",
		"ts-node": "^3.0.4",
		"tslint": "~5.7.0",
		"typescript": "~2.4.2"
	}
}
